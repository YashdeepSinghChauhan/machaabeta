- if user_signed_in?
	#posts.transitions-enabled
		- @posts.each do |post|
			.box.panel.panel-default
				= link_to (image_tag post.image.url), post
				%h2= link_to post.title, post
				%p.user
				Submitted by
				= post.user.email
- else
	.jumbotron
		%h1.display-3 Welcome to Machaa
		%p.lead Create your account and start sharing your ideas and moments with the world.
		%hr.my-4/
		%p.lead Before staring, check out the FAQs of Machaa.Online
		%p.lead
		%a.btn.btn-info.btn-lg{:href => "#", :role => "button"} FAQs